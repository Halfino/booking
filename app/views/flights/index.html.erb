<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
  <tr>
    <th>Departure</th>
    <th>Destionation</th>
    <th>Route</th>
    <th>Eobt</th>
    <th>Ctot</th>
    <th>Event</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @flights.each do |flight| %>
    <tr>
      <td><%= flight.adep.icao %></td>
      <td><%= flight.ades.icao %></td>
      <td><%= flight.route %></td>
      <td><%= flight.eobt %></td>
      <td><%= flight.ctot %></td>
      <td><%= flight.event.name %></td>
      <td>
        <% if flight.user_id == nil %>
          <%= button_to 'book', {:controller => 'flights', :action => 'book_flight', :id => flight.id, :user_id => current_user.id}, {:method => :put} %></td>
        <% else %>
          BOOKED
        <% end %>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>
