<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
  <tr>
    <th>Route</th>
    <th>Eobt</th>
    <th>Ctot</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @flights.each do |flight| %>
    <tr>
      <td><%= flight.route %></td>
      <td><%= flight.eobt %></td>
      <td><%= flight.ctot %></td>
      <td><%= link_to 'Show', flight %></td>
      <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
      <td><%= link_to 'Destroy', flight, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

